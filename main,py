# -----------------------------------------------------------------------------14.11.2025

# print(df.genres)
generes_counts = df["genres"].value_counts()
# 
plt.figure(figsize=(10, 6))
sns.barplot(x=generes_counts.index[:10], y=generes_counts.values[:10])

generes_counts.head(10).plot(kind='bar')
plt.title('Top 10 Movie Genres')
plt.xlabel('Genres')
plt.ylabel('Number of Movies')
plt.xticks(rotation=10)
plt.show()


